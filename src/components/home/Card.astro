---
const { title, description } = Astro.props
---

<div
  class="relative flex flex-col items-center p-6 min-h-full bg-white rounded shadow-xl"
>
  <div class="bg-blue-600 text-white p-2 rounded-full">
    <svg
      class="icon icon-tabler icon-tabler-user"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
        d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"></path><path
        d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"></path>
    </svg>
  </div>
  <h4
    class="text-xl font-bold leading-snug tracking-tight mb-1 text-center capitalize"
  >
    {title}
  </h4>
  <p class="text-stone-600 text-center">{description}</p>
</div>
