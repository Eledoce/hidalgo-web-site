---
import WhatsA from '../WhatsA.jsx'
---

<footer>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    {/* Top area: Blocks */}
    <div class="flex justify-center py-8 md:py-12 border-t border-gray-200">
      <div
        class="h-10 w-10 bg-gradient-to-br from-blue-600 to-teal-300 rounded-full"
      >
      </div>
    </div>

    {/* Bottom area */}
    <div
      class="md:flex md:items-center md:justify-between py-4 md:py-8 border-t border-gray-200"
    >
      {/* Social links */}
      <ul class="flex mb-4 md:order-1 md:ml-4 md:mb-0">
        <li>
          <WhatsA
            client:load
            className="flex justify-center items-center text-stone-600 hover:text-stone-900 "
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-brand-whatsapp"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"></path>
              <path
                d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
              ></path>
            </svg>
          </WhatsA>
        </li>
        <li class="ml-4">
          <a
            href="mailto:ventas@electricayplomeriahidalgo.com"
            class="flex justify-center items-center text-stone-600 hover:text-stone-900 bg-white hover:bg-white-100 rounded-full shadow transition duration-150 ease-in-out"
            aria-label="mail"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-mail"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
              ></path><path d="M3 7l9 6l9 -6"></path></svg
            >
          </a>
        </li>
        <li class="ml-4">
          <a
            class="flex justify-center items-center text-stone-600 hover:text-stone-900 bg-white hover:bg-white-100 rounded-full shadow transition duration-150 ease-in-out"
            href="https://www.facebook.com/profile.php?id=100063556434788"
            aria-label="Facebook"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-brand-facebook-filled"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M18 2a1 1 0 0 1 .993 .883l.007 .117v4a1 1 0 0 1 -.883 .993l-.117 .007h-3v1h3a1 1 0 0 1 .991 1.131l-.02 .112l-1 4a1 1 0 0 1 -.858 .75l-.113 .007h-2v6a1 1 0 0 1 -.883 .993l-.117 .007h-4a1 1 0 0 1 -.993 -.883l-.007 -.117v-6h-2a1 1 0 0 1 -.993 -.883l-.007 -.117v-4a1 1 0 0 1 .883 -.993l.117 -.007h2v-1a6 6 0 0 1 5.775 -5.996l.225 -.004h3z"
                stroke-width="0"
                fill="currentColor"></path></svg
            >
          </a>
        </li>
      </ul>

      {/* Copyrights note */}
      <div class="text-sm text-stone-600 mr-4">
        Copyryght © 2023 -{' '}
        <span class="text-blue-600">Eléctrica y Plomería Hidalgo</span>{' '}
        - todos los derechos reservados.
      </div>
    </div>
  </div>
</footer>
