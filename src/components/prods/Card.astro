---
const { img, title, description, ob, route } = Astro.props
import { Image } from 'astro:assets'
import { url } from '../../scripts/url'
---

<section class="cardProds relative">
  <a href={`${url}/productos/${ob}`}>
    <div class="bg-stone-100 h-2/3">
      {img && <Image src={img} alt="cable" class="h-full object-cover" />}
    </div>
    <div class="h-1/3 p-2">
      <p class="text-stone-950 font-semibold">
        {title ? title : 'no hay titulo'}
      </p>
    </div>
    <div
      class="absolute right-0 bottom-0 bg-stone-400 text-xs text-white px-2 py-1 rounded-tl-xl font-semibold"
    >
      marca
    </div>
  </a>
</section>
